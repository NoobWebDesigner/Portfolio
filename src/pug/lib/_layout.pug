include _mixin
include _gNav

block vars

doctype html
html(lang='ja')
  head
    //- gtag.js
    .
      <!-- Global site tag (gtag.js) - Google Analytics -->
      <script async src="https://www.googletagmanager.com/gtag/js?id=UA-142232094-1"></script>
      <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'UA-142232094-1');
      </script>

    //- meta基本
    meta(charset="utf-8")
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name="viewport" content="width=device-width, minimum-scale=1, initial-scale=1, shrink-to-fit=yes")
    meta(name='format-detection', content='email=no,telephone=no,address=no')
    meta(http-equiv='x-dns-prefetch-control' content='on')
    block meta
    //- ページタイトル、ディスクリプションの設定
    - 
      var siteURL = "https://fujimaki.design/"
      var siteName = "326.Fujimaki | Web Designer / Coder"
      var description = "WEBデザイナー / コーダーの 326.Fujimaki のポートフォリオサイト。"

    if pageName == ""
      - 
        var title= "326.Fujimaki | Web Designer / Coder"
        var ogpTitle= siteName
    else
      - 
        var title= pageName + " | 326.Fujimaki | Web Designer / Coder"
        var ogpTitle= pageName
        var d_description = pageName + d_description

    if description != ""
      -
        var d_description = description

    title #{title}   
    meta(name="description" content=d_description)
    
    if pageName == ""
      link(rel="canonical" href=siteURL)
    else
      link(rel="canonical" href=siteURL + pageUrl + '/')
    

    //-ogp設定
    if pageUrl == ""
      - 
        var ogpType= "website"
    else
      - 
        var ogpType= "article"

    meta(property="og:title" content=ogpTitle)
    meta(property="og:type" content=ogpType)
    meta(property="og:image" content='/images/ogp.png')

    if pageName == ""
      meta(property="og:url" content=siteURL)
    else
      meta(property="og:url" content=siteURL + pageUrl + '/')
    
    meta(property="og:description" content=d_description)
    meta(property="og:site_name" content=siteName)
    meta(property="og:locale" content="ja") 

    //- 共通CSS
    link(rel='stylesheet', href='/css/style.css')
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Noto+Sans+JP:300,400,500&subset=japanese")
    link(rel="stylesheet" href="https://use.typekit.net/zgt5zkk.css")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/yakuhanjp@3.2.0/dist/css/yakuhanjp-noto.min.css")
    link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous")

    //- icons
    link(rel="apple-touch-icon" type="image/png" href="/apple-touch-icon-180x180.png")
    link(rel="icon" type="image/png" href="/icon-192x192.png")

    //-プリロード
    link(rel="preconnect dns-prefetch" href="https://www.google-analytics.com" crossorigin)
    link(rel="preconnect dns-prefetch" href="https://fonts.googleapis.com" crossorigin)
    link(rel="preconnect dns-prefetch" href="https://fonts.gstatic.com" crossorigin)
    link(rel="preconnect dns-prefetch" href="https://p.typekit.net" crossorigin)
    link(rel="preconnect dns-prefetch" href="https://cdn.jsdelivr.net" crossorigin)
    link(rel="preconnect dns-prefetch" href="https://use.fontawesome.com" crossorigin)

    style.
      html,body{
        font-family:canada-type-gibson, 'Avenir Next', Arial, YakuHanJP_Noto, "Noto Sans JP", "Hiragino Sans", "Hiragino Kaku Gothic ProN", Meiryo, sans-serif
      }


    //-head引き継ぎ
    block head

  body(id=pageID)

    //- header
    header#header.d-flex.justify-content-between.fixed-top.w-100
      h1.mb-0
        a(href="/") 326.Fujimaki
      nav#gNav
        ul
          +gNav
      #sp-menu.d-block.d-sm-none
        i.fas.fa-f.fa-bars
    #sticky

    block body

    //- footer
    footer.border-top.p-4
      .container.d-sm-flex.justify-content-between.text-center
        small ©️ 2019 326.Fujimaki
        ul.d-none.d-sm-block
          +gNav

    #pagetop
      i.far.fa-caret-square-up

    block footer
    script(src="/js/app.js" defer)